<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="local_joint_control_type" default=""/>
  <arg name="ns" default=""/>
  <arg name="controller_pkg_name" default="talos_controller_configuration"/>
  <arg name="robot" default="full_v2" />


  <group if="$(eval arg('robot') == 'full_v2')" >
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_arm_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_arm_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_gripper_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_gripper_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_leg_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_leg_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_head.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_torso.launch" pass_all_args="true" />
  </group>

  <group if="$(eval arg('robot') == 'lower_body_with_torso')" >
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_leg_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_leg_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_torso.launch" pass_all_args="true" />
  </group>

  <group if="$(eval arg('robot') == 'upper_body')" >
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_arm_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_arm_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_gripper_left.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_gripper_right.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_head.launch" pass_all_args="true" />
    <include file="$(find talos_controller_configuration)/launch/local_joint_control/direct_control_torso.launch" pass_all_args="true" />
  </group>

</launch>
